<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="Button" parent="base">
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="container">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/fundo</item>
    </style>

    <style name="TextView" parent="base">
        <item name="android:textColor">#1b5e20</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="TextViewProduto" parent="base">
        <item name="android:textColor">#1b5e20</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="ListView" parent="base">
        <item name="android:divider">#3e2723</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">@drawable/listview</item>
    </style>

    <style name="Spinner">
        <item name="android:divider">#3e2723</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">#c8e6c9</item>

    </style>

    <style name="NumberPicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditText" parent="base">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SpinnerProduto" parent="Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="ButtonProduto" parent="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">0.4</item>
    </style>

</resources>

